<table>
    <thead>
        <tr>
            <th> N </th>
            <th> Title </th>
            <th> Description </th>
            <th> Actions </th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td> {{@index}} </td>
            <td>{{ title }}</td>
            <td>{{description}}</td>
            <td>
                {{#if done}}
                    <a href="/toggle-done/{{_id}}"> Undone </a>
                {{else}}
                    <a href="/toggle-done/{{_id}}"> Done </a>
                {{/if}}
                <a href="/delete/{{_id}}"> Delete </a>
                <a href="/edit/{{_id}}"> Edit </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

